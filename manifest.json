{
    "manifest_version": 3,
    "name": "Battery Balance Monitor",
    "version": "1.0",
    "description": "Notifies you when battery level goes below 20% or above 80%",
    "permissions": ["alarms", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  